doctype html
html
  head
    title Url Shortener Microservices
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/bulma/0.2.3/css/bulma.min.css')
  body
    block content
      section.section
        .container
          .content
            h1.title URL Shortener
            form(action='/shortener/shorten', method='post')
              input.input(type='url', name='url', placeholder='Paste a link...', required=true)
              br
              br
              input.button.is-info(type='submit')
