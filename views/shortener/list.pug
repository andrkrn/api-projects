extends index.pug

block content
  section.section
    .container
      .content
        table.table
          thead
            tr
              th ID
              th Long Url
              th Short Url
              th
          tbody
            each url in urls
              tr
                td= url._id
                td= url.long_url
                td
                  a(href=`http://localhost:3000/shortener/${base62.encode(url._id)}`)= base62.encode(url._id)
                td
                  a(href=`/shortener/delete/${url._id}`, class='button') Delete
